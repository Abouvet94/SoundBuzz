<script>  

var Url_Playlist = "{{ path('PlaylisteAutomate') }}";

//Tableau playliste_music qui comporte dynamiquement la liste des musique
// de la playlist selectionné
var playliste_music = [];

// ## Partie Ajax ##
    /*
        play_liste_all :
            - Récupére l'id du Li Selectionné
            - Envoie en Post l'id dans une function 'WavesController/PlaylisteAutomate'
            - Récupére les Musiques correspondantes a la Playliste
            - Affiche les musique via 'music.append()' dans la Div mére
    */
    $('#play_liste_all li').click(function(){
        var id =  $(this).attr('id');
        var value =  $(this).html();
        music = $('#Playlist_all_pages table');
        Name_Playlist = $('#Name_Playlist');
        playliste_music = [];
        var url_music = "{{ path('dowload_music') }}";
        var id_music;
        //var jObj = $("option", this).filter(":selected"), id = jObj.get(0).id;
        $.ajax({
            url: "{{ path('PlaylisteAutomate') }}",
            type: "POST",
            dataType: "html",
            data: {
                id : id
            },
            success: function (data) {
                var tab = JSON.parse(data);
                //Vide la playliste acuel
                Name_Playlist.empty();
                music.empty();
                for(var i=0; i < tab.length; i++ ){ 
                    id_music = tab[i].music_id;
                   playliste_music.push(tab[i].src);
                   music.append('<tr>');
                   music.append('<td><a id="'+tab[i].music_id+'" href="#" data-value="'+tab[i].src+'">"'+tab[i].titre+'"</a></td>');
                   music.append('<td>'+tab[i].artiste+'</td>');
                   music.append('<td>'+tab[i].album+'</td>');
                   music.append('<td>'+tab[i].times+'</td>');
                   music.append('<td id="TwigLien"><a href="'+url_music+'/'+id_music+'"> Dowload </a></td>');
                  // music.append('<td><a href="javascript:alert('Hello World!');">Execute JavaScript</a></td>');
                   music.append('</tr>');

                }
                Name_Playlist.append(value);
            }
        });
    })



    /*
       - Récupére un objet Music - 
    */
    function getMusic(id){
        //Variables Music
        artiste = $('#Artiste_music');
        titre = $('#Titre_music');
        var end_time, start_time;
        titre.empty();
        artiste.empty();
        if(id){
            $.ajax({
            url: "{{ path('getMusicid') }}",
            type: "POST",
            dataType: "html",
            data: {
                id : id
            },
            success: function (data) {
                var tab = JSON.parse(data);
                titre.append(tab.titre);
                artiste.append(tab.artiste);
            }
            });
        }
    }

