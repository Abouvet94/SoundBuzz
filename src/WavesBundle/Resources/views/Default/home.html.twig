<script>  
    // ## Partie Ajax ##
    /*
        play_liste_all :
            - Récupére l'id du Li Selectionné
            - Envoie en Post l'id dans une function 'WavesController/PlaylisteAutomate'
            - Récupére les Musiques correspondantes a la Playliste
            - Affiche les musique via 'music.append()' dans la Div mére
    */
    $('#play_liste_all li').click(function(){
        var id =  $(this).attr('id');
        music = $('#Playlist_all_pages ul');
        //var jObj = $("option", this).filter(":selected"), id = jObj.get(0).id;
        $.ajax({
            url: "{{ path('PlaylisteAutomate') }}",
            type: "POST",
            dataType: "html",
            data: {
                id : id
            },
            success: function (data) {
                var tab = JSON.parse(data);
                //Vide la playliste acuel
                music.empty();
                for(var i=0; i < tab.length; i++ ){ 
                    music.append('<li><a href="#" data-value="'+'../'+tab[i].src+'">"'+tab[i].titre+'"</a></li>');
                }
            }
        });
    })

</script>
