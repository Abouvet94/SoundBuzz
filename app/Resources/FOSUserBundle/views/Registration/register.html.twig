						</div>
					</div>

                    <form action="{{ path('fos_user_registration_register') }}" method="POST">
                        <div id="fos_user_registration_form">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-group input-control', 'placeholder': 'form.email'|trans } }) }}
                            {{ form_errors(form.email) }}

                            {{ form_widget(form.username, { 'attr': {'class': 'form-group input-control', 'placeholder': 'form.username'|trans } }) }}
                            {{ form_errors(form.username) }}

                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-group input-control', 'placeholder': 'form.password'|trans } }) }}
                            {{ form_errors(form.plainPassword.first) }}

                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-group input-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
                            {{ form_errors(form.plainPassword.second) }}

                            {{ form_rest(form) }}

                        </div>

                        <div>
                            <div class="btn_mid">
                                <input class="btn_w" type="submit" value="S'inscrire">
                            </div>
                            
                        </div>
